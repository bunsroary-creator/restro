<% layout('layout') -%>

<div class="text-center py-5">
    <div class="display-1 text-muted mb-4">
        <i class="bi bi-exclamation-triangle"></i>
    </div>
    <h1 class="display-4 mb-3"><%= error.status || 'Error' %></h1>
    <p class="lead text-muted mb-4"><%= message %></p>
    
    <% if (error.status === 404) { %>
    <p class="text-muted mb-4">The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.</p>
    <% } %>
    
    <a href="/dashboard" class="btn btn-primary">
        <i class="bi bi-house"></i> Go to Dashboard
    </a>
    
    <% if (process.env.NODE_ENV === 'development' && error.stack) { %>
    <div class="mt-5">
        <details>
            <summary class="btn btn-outline-secondary">Show Error Details</summary>
            <pre class="text-start mt-3 p-3 bg-light border rounded"><%= error.stack %></pre>
        </details>
    </div>
    <% } %>
</div>