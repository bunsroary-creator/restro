<% layout('layout') -%>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">Menu Management</h1>
        <p class="text-muted">Manage your restaurant's menu items</p>
    </div>
    <% if (['admin', 'manager'].includes(user.role)) { %>
    <a href="/menu/create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Menu Item
    </a>
    <% } %>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" class="row g-3">
            <div class="col-md-4">
                <label for="category" class="form-label">Category</label>
                <select name="category" id="category" class="form-select">
                    <option value="">All Categories</option>
                    <% categories.forEach(category => { %>
                    <option value="<%= category.id %>" <%= filters.category === category.id ? 'selected' : '' %>>
                        <%= category.name %>
                    </option>
                    <% }) %>
                </select>
            </div>
            <div class="col-md-4">
                <label for="search" class="form-label">Search</label>
                <input type="text" name="search" id="search" class="form-control" 
                       value="<%= filters.search || '' %>" placeholder="Search menu items...">
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary me-2">
                    <i class="bi bi-search"></i> Filter
                </button>
                <a href="/menu" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Menu Items -->
<div class="card">
    <div class="card-body">
        <% if (menuItems && menuItems.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Spice Level</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% menuItems.forEach(item => { %>
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="<%= item.image_url || 'https://via.placeholder.com/60x60' %>" 
                                     alt="<%= item.name %>" class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;">
                                <div>
                                    <h6 class="mb-0"><%= item.name %></h6>
                                    <small class="text-muted"><%= item.description.substring(0, 50) %>...</small>
                                    <div class="mt-1">
                                        <% if (item.is_vegetarian) { %>
                                        <span class="badge bg-success">Vegetarian</span>
                                        <% } %>
                                        <% if (item.is_vegan) { %>
                                        <span class="badge bg-info">Vegan</span>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td><%= item.category?.name || 'N/A' %></td>
                        <td><strong>â‚¬<%= item.price.toFixed(2) %></strong></td>
                        <td>
                            <div class="d-flex">
                                <% for (let i = 1; i <= 5; i++) { %>
                                <i class="bi bi-circle-fill <%= i <= item.spice_level ? 'text-danger' : 'text-muted' %>" style="font-size: 0.7rem;"></i>
                                <% } %>
                            </div>
                        </td>
                        <td>
                            <span class="badge bg-<%= item.is_available ? 'success' : 'danger' %>">
                                <%= item.is_available ? 'Available' : 'Unavailable' %>
                            </span>
                        </td>
                        <td>
                            <% if (['admin', 'manager'].includes(user.role)) { %>
                            <div class="btn-group btn-group-sm">
                                <a href="/menu/<%= item.id %>/edit" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <% if (user.role === 'admin') { %>
                                <form method="POST" action="/menu/<%= item.id %>?_method=DELETE" class="d-inline" 
                                      onsubmit="return confirm('Are you sure you want to delete this item?')">
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                                <% } %>
                            </div>
                            <% } %>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <% } else { %>
        <div class="text-center py-5">
            <i class="bi bi-menu-button-wide text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3 text-muted">No menu items found</h4>
            <p class="text-muted">Try adjusting your filters or add a new menu item.</p>
        </div>
        <% } %>
    </div>
</div>