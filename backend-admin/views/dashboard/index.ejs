<% layout('layout') -%>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">Dashboard</h1>
        <p class="text-muted">Welcome back, <%= user.full_name %>!</p>
    </div>
    <div class="text-muted">
        <i class="bi bi-calendar3"></i>
        <%= moment().format('dddd, MMMM Do YYYY') %>
    </div>
</div>

<% if (stats) { %>
<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Today's Orders</h6>
                        <h2 class="mb-0"><%= stats.todayStats.orders %></h2>
                    </div>
                    <i class="bi bi-bag fs-1 opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Today's Revenue</h6>
                        <h2 class="mb-0">€<%= stats.todayStats.revenue.toFixed(2) %></h2>
                    </div>
                    <i class="bi bi-currency-euro fs-1 opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Pending Orders</h6>
                        <h2 class="mb-0"><%= stats.todayStats.pendingOrders %></h2>
                    </div>
                    <i class="bi bi-clock fs-1 opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Total Customers</h6>
                        <h2 class="mb-0"><%= stats.totalCustomers %></h2>
                    </div>
                    <i class="bi bi-people fs-1 opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Order Status Overview -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Order Status Overview</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col">
                        <div class="border rounded p-3">
                            <i class="bi bi-clock text-warning fs-3"></i>
                            <h4 class="mt-2 mb-0"><%= stats.ordersByStatus.pending %></h4>
                            <small class="text-muted">Pending</small>
                        </div>
                    </div>
                    <div class="col">
                        <div class="border rounded p-3">
                            <i class="bi bi-check-circle text-primary fs-3"></i>
                            <h4 class="mt-2 mb-0"><%= stats.ordersByStatus.confirmed %></h4>
                            <small class="text-muted">Confirmed</small>
                        </div>
                    </div>
                    <div class="col">
                        <div class="border rounded p-3">
                            <i class="bi bi-gear text-info fs-3"></i>
                            <h4 class="mt-2 mb-0"><%= stats.ordersByStatus.preparing %></h4>
                            <small class="text-muted">Preparing</small>
                        </div>
                    </div>
                    <div class="col">
                        <div class="border rounded p-3">
                            <i class="bi bi-truck text-success fs-3"></i>
                            <h4 class="mt-2 mb-0"><%= stats.ordersByStatus.ready %></h4>
                            <small class="text-muted">Ready</small>
                        </div>
                    </div>
                    <div class="col">
                        <div class="border rounded p-3">
                            <i class="bi bi-check2-all text-success fs-3"></i>
                            <h4 class="mt-2 mb-0"><%= stats.ordersByStatus.completed %></h4>
                            <small class="text-muted">Completed</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% } %>

<!-- Recent Orders -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Recent Orders</h5>
                <a href="/orders" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                <% if (recentOrders && recentOrders.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Total</th>
                                <th>Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% recentOrders.forEach(order => { %>
                            <tr>
                                <td><strong>#<%= order.id.slice(-6) %></strong></td>
                                <td>
                                    <%= order.user?.full_name || 'N/A' %><br>
                                    <small class="text-muted"><%= order.phone %></small>
                                </td>
                                <td>
                                    <span class="badge bg-<%= order.order_type === 'delivery' ? 'info' : 'secondary' %>">
                                        <%= order.order_type %>
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-<%= 
                                        order.status === 'pending' ? 'warning' :
                                        order.status === 'confirmed' ? 'primary' :
                                        order.status === 'preparing' ? 'info' :
                                        order.status === 'ready' ? 'success' :
                                        order.status === 'completed' ? 'success' : 'danger'
                                    %>">
                                        <%= order.status %>
                                    </span>
                                </td>
                                <td><strong>€<%= order.total_amount.toFixed(2) %></strong></td>
                                <td>
                                    <small><%= moment(order.created_at).fromNow() %></small>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                <div class="text-center py-4">
                    <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                    <p class="text-muted mt-2">No recent orders</p>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>