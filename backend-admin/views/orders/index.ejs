<% layout('layout') -%>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">Order Management</h1>
        <p class="text-muted">Manage and track all restaurant orders</p>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" class="row g-3">
            <div class="col-md-3">
                <label for="status" class="form-label">Status</label>
                <select name="status" id="status" class="form-select">
                    <option value="">All Statuses</option>
                    <option value="pending" <%= filters.status === 'pending' ? 'selected' : '' %>>Pending</option>
                    <option value="confirmed" <%= filters.status === 'confirmed' ? 'selected' : '' %>>Confirmed</option>
                    <option value="preparing" <%= filters.status === 'preparing' ? 'selected' : '' %>>Preparing</option>
                    <option value="ready" <%= filters.status === 'ready' ? 'selected' : '' %>>Ready</option>
                    <option value="completed" <%= filters.status === 'completed' ? 'selected' : '' %>>Completed</option>
                    <option value="cancelled" <%= filters.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="order_type" class="form-label">Type</label>
                <select name="order_type" id="order_type" class="form-select">
                    <option value="">All Types</option>
                    <option value="pickup" <%= filters.order_type === 'pickup' ? 'selected' : '' %>>Pickup</option>
                    <option value="delivery" <%= filters.order_type === 'delivery' ? 'selected' : '' %>>Delivery</option>
                </select>
            </div>
            <div class="col-md-6 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary me-2">
                    <i class="bi bi-search"></i> Filter
                </button>
                <a href="/orders" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Orders -->
<div class="card">
    <div class="card-body">
        <% if (orders && orders.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Time</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                    <tr>
                        <td><strong>#<%= order.id.slice(-6) %></strong></td>
                        <td>
                            <%= order.user?.full_name || 'N/A' %><br>
                            <small class="text-muted"><%= order.phone %></small>
                        </td>
                        <td>
                            <span class="badge bg-<%= order.order_type === 'delivery' ? 'info' : 'secondary' %>">
                                <i class="bi bi-<%= order.order_type === 'delivery' ? 'truck' : 'bag' %>"></i>
                                <%= order.order_type %>
                            </span>
                        </td>
                        <td>
                            <form method="POST" action="/orders/<%= order.id %>/status?_method=PUT" class="d-inline">
                                <select name="status" class="form-select form-select-sm" onchange="this.form.submit()"
                                        style="min-width: 120px;">
                                    <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                    <option value="confirmed" <%= order.status === 'confirmed' ? 'selected' : '' %>>Confirmed</option>
                                    <option value="preparing" <%= order.status === 'preparing' ? 'selected' : '' %>>Preparing</option>
                                    <option value="ready" <%= order.status === 'ready' ? 'selected' : '' %>>Ready</option>
                                    <option value="completed" <%= order.status === 'completed' ? 'selected' : '' %>>Completed</option>
                                    <option value="cancelled" <%= order.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                                </select>
                            </form>
                        </td>
                        <td><strong>€<%= order.total_amount.toFixed(2) %></strong></td>
                        <td>
                            <%= moment(order.created_at).format('MMM DD, HH:mm') %><br>
                            <small class="text-muted"><%= moment(order.created_at).fromNow() %></small>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" 
                                    data-bs-target="#orderModal<%= order.id.replace(/-/g, '') %>">
                                <i class="bi bi-eye"></i> View
                            </button>
                        </td>
                    </tr>

                    <!-- Order Details Modal -->
                    <div class="modal fade" id="orderModal<%= order.id.replace(/-/g, '') %>" tabindex="-1">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Order #<%= order.id.slice(-6) %></h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h6>Customer Information</h6>
                                            <p class="mb-1"><strong>Name:</strong> <%= order.user?.full_name || 'N/A' %></p>
                                            <p class="mb-1"><strong>Phone:</strong> <%= order.phone %></p>
                                            <p class="mb-3"><strong>Email:</strong> <%= order.user?.email || 'N/A' %></p>
                                        </div>
                                        <div class="col-md-6">
                                            <h6>Order Details</h6>
                                            <p class="mb-1"><strong>Type:</strong> <%= order.order_type %></p>
                                            <p class="mb-1"><strong>Status:</strong> 
                                                <span class="badge bg-<%= 
                                                    order.status === 'pending' ? 'warning' :
                                                    order.status === 'confirmed' ? 'primary' :
                                                    order.status === 'preparing' ? 'info' :
                                                    order.status === 'ready' ? 'success' :
                                                    order.status === 'completed' ? 'success' : 'danger'
                                                %>"><%= order.status %></span>
                                            </p>
                                            <p class="mb-3"><strong>Total:</strong> €<%= order.total_amount.toFixed(2) %></p>
                                        </div>
                                    </div>

                                    <% if (order.order_type === 'delivery' && order.delivery_address) { %>
                                    <h6>Delivery Address</h6>
                                    <p class="mb-3">
                                        <%= order.delivery_address.street %><br>
                                        <%= order.delivery_address.city %> <%= order.delivery_address.postal_code %>
                                    </p>
                                    <% } %>

                                    <% if (order.order_items && order.order_items.length > 0) { %>
                                    <h6>Order Items</h6>
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Item</th>
                                                    <th>Quantity</th>
                                                    <th>Price</th>
                                                    <th>Total</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% order.order_items.forEach(item => { %>
                                                <tr>
                                                    <td>
                                                        <%= item.menu_item?.name || 'N/A' %>
                                                        <% if (item.special_instructions) { %>
                                                        <br><small class="text-muted">Note: <%= item.special_instructions %></small>
                                                        <% } %>
                                                    </td>
                                                    <td><%= item.quantity %></td>
                                                    <td>€<%= (item.menu_item?.price || 0).toFixed(2) %></td>
                                                    <td>€<%= ((item.menu_item?.price || 0) * item.quantity).toFixed(2) %></td>
                                                </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <% } %>

                                    <% if (order.special_notes) { %>
                                    <h6>Special Notes</h6>
                                    <p class="mb-0"><%= order.special_notes %></p>
                                    <% } %>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <% } else { %>
        <div class="text-center py-5">
            <i class="bi bi-bag text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3 text-muted">No orders found</h4>
            <p class="text-muted">Orders will appear here when customers place them.</p>
        </div>
        <% } %>
    </div>
</div>