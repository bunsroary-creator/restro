<% layout('layout') -%>

<div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-6 col-lg-5 col-xl-4">
        <div class="card login-card shadow-lg animate-fade-in">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <div class="bg-gradient-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center animate-pulse mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-mountain fs-2"></i>
                    </div>
                    <h2 class="mt-3 mb-1 text-gradient">Admin Portal</h2>
                    <p class="text-muted fw-medium">Himalayan Kitchen Management System</p>
                </div>

                <form action="/auth/login" method="POST">
                    <div class="mb-3">
                        <label for="email" class="form-label fw-semibold">
                            <i class="bi bi-envelope me-2"></i>Email Address
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label fw-semibold">
                            <i class="bi bi-lock me-2"></i>Password
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-lock"></i>
                            </span>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3 btn-lg">
                        <i class="bi bi-box-arrow-in-right"></i> Sign In
                    </button>
                </form>

                <div class="alert alert-info border-0">
                    <i class="bi bi-info-circle me-2"></i>
                    <small>
                        <strong>Demo Credentials:</strong><br>
                        <span class="d-block mt-1"><i class="bi bi-person-badge me-1"></i> Admin: admin@himalayankitchen.de / admin123</span>
                        <span class="d-block"><i class="bi bi-person-gear me-1"></i> Manager: manager@himalayankitchen.de / manager123</span>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>